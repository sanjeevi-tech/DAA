#include <stdio.h>
int main()
{
    int a[] = {50,10,30};
    int n = sizeof(a)/sizeof(a[0]);
    int i, j, min;
    for(i =0;i<=n-2;i++) 
    {
        min=i;
        for(j=i+1;j<=n-1;j++) 
        {
            if(a[j]<a[min]) 
            {
                min=j;
            }
        }
        a[i]=a[i]+a[min];
        a[min]=a[i]-a[min];
        a[i]=a[i]-a[min];
    }
    printf("Sorted array: \n");
    for (i=0;i<n;i++) 
    {
        printf("%d ",a[i]);
    }
   }
